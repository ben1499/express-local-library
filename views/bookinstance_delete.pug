extends layout

block content

  h1 #{title}: #{book_instance.book.title + " : " + book_instance.imprint}
  p 
    if book_instance.status=='Available'
      span.text-success #{book_instance.status}
    else if book_instance.status=='Maintenance'
      span.text-danger #{book_instance.status}
    else
      span.text-warning #{book_instance.status}
    if book_instance.status!='Available'
      span  (Due: #{book_instance.due_back_formatted} )

  p Do you really want to delete this Book Instance?

  form(method='POST')
      div.form-group
      input#authorid.form-control(type='hidden', name='bookinstanceid', value=book_instance._id )

      button.btn.btn-primary(type='submit') Delete
